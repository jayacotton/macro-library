	macro	strcpy
	strcpy	
;
; hl is output
; de is input
; b max number of bytes
; c is terminal byte
;
strcpy	equ	$
s$sysin ldax	d	; get byte pointed to by de
	cmp	c	; comp for terminal byte
	rz		; it was
	dcr	b	; count the byte
	rz		; was that all
	mov	m,a	; store the byte in mem
	inx	d	; bump the indexs
	inx	h
	jmp	s$sysin
	mend
