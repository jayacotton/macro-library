	macro	fmerr
	fmerr	
	gblb	%fmerr
	aif	(%fmerr)&done
%fmerr	setb	1
	jmp	x$sysin
fmerr	equ	$
	lda	errno
	rrc
	rrc
	rrc
	rrc
	ani	0fh
	call 	h$sysin
	lda	errno
	ani	0fh
	call	h$sysin	
	mov	a,c
	cpi	openf
	jz	opener
	cpi	closef
	jz	closeer
	cpi	srchf
	jz	opener
	cpi	writef
	jz	noroer
	cpi	creatf
	jz	noroer
	cpi	delf
	jz	deleter
	lxi	d,o$sysin
	mvi	c,printf
	call	bdos
	jmp	0	; bad error no come back.
h$sysin	equ	$
	cpi	10
	jnc	p$sysin
	adi	'0'
	jmp	i$sysin
p$sysin	adi	'A'-10
i$sysin	mov	e,a
	mvi	c,2
	call	bdos
	ret
o$sysin	db	' Unknown i/o error'
	db	cr,lf
	db	'$'
opener	equ	$
	lxi	d,c$sysin
	mvi	c,printf
	call	bdos
	jmp	0
c$sysin	db	' Open error, file not found'
	db	cr,lf
	db	'$'
closeer equ	$
	lxi	d,d$sysin
	mvi	c,printf
	call	bdos
	ret
d$sysin	db	' Close error, file not closed' 
	db	cr,lf,'$'
deleter equ	$
	lxi	d,e$sysin
	mvi	c,printf
	call	bdos
	jmp	0
e$sysin	db	' Delete error, file not found'
	db	cr,lf,'$'
noroer	equ	$
	lxi	d,r$sysin
	mvi	c,printf
	call	bdos
	jmp	0
r$sysin	db	' Disk error, no room'
	db	cr,lf,'$'
errno	db	0
x$sysin	equ	$
&done	anop
	mend
